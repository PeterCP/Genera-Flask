{% extends "layouts/app.html.j2" %}

{% import "macros/wtf.html.j2" as wtf %}
{% import "macros/custom.html.j2" as custom %}
{% import "macros/forms.html.j2" as forms %}

{% block title %}
    Login page - Genera App
{% endblock %}

{% block content %}
<div class="well">
    {% call forms.form(form, action=url_for('login'), method='POST', class='form-horizontal') %}
        {% set colspan = ('md', 3, 9) %}
        {{ forms.basic_field(form.email, colspan=colspan) }}
        {{ forms.default_field(form.password, colspan=colspan) }}
        {{ forms.checkbox_field(form.remember, colspan=colspan) }}
        {{ forms.button_field(text='Log in', glyphicon='log-in', colspan=colspan) }}
    {% endcall %}
</div>
{% endblock %}
