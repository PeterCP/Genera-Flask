{% extends "layouts/app.html.j2" %}

{% block title %}
	Users
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Name</th>
								<th>Email</th>
								<th>Gender</th>
								<th>Birth Date</th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
								<tr>
									<td><a href="{{ url_for('users.view_single', user_id=user.id) }}">
										{{ user.full_name }}
									</a></td>
									<td>{{ user.email }}</td>
									<td>{{ 'Male' if user.gender else 'Female' }}</td>
									<td>{{ user.birth_date | format_date }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
