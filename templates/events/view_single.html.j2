{% extends "layout.html.j2" %}

{% block title %}
	Event: {{ event.title }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="jumbotron">
			<h1>{{ event.title }}</h1>
			{% if can_edit %}
				<a href="{{ url_for('events.attendance', evt_id=event.id) }}">Edit attendance</a>
			{% endif %}
			<dl class="dl-horizontal">
				<dt>Points:</dt>
				<dd>{{ event.points }}</dd>

				<dt>Date:</dt>
				<dd>{{ event.date|strftime }}</dd>

				<dt>Time:</dt>
				<dd>{{ event.time }}</dd>

				<dt>Publisher:</dt>
				<dd><a href="{{ url_for('users.view_single', user_id=event.publisher.id) }}">
					{{ event.publisher.full_name }}
				</a></dd>

				<dt>Category:</dt>
				<dd>{{ event.category.name }}</dd>
			</dl>

			<p>{{ event.rendered_text }}</p>
		</div>
	</div>
{% endblock %}

