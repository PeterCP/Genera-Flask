{% extends "layout.html.j2" %}

{% block title %}
	Events
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="list-group">
					{% for event in events %}
						<a href="{{ url_for('events.view_single', evt_id=event.id) }}"
							class="list-group-item">
							<h4 class="list-group-item-heading">
								{{ event.title }}
								<small style="margin-left: 10px;">
									<ul class="list-inline">
										<li><strong>Points:</strong> {{ event.points }}</li>
										<li><strong>Date:</strong> {{ event.date }}</li>
										<li><strong>Category:</strong> {{ event.category.name }}</li>
									</ul>
								</small>
							</h4>
							<p class="list-group-item-text">{{ event.rendered_text[:200] }}...</p>
						</a>
					{% else %}
						There are no events.
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

