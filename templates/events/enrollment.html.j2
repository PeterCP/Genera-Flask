{% extends "layouts/app.html.j2" %}

{% import "macros/forms.html.j2" as forms %}

{% block title %}
    Enroll to {{ event.name }} - Genera App
{% endblock %}

{% block content %}
<div class="well">
    {% call forms.form(form, action=url_for('events.enroll', evt_id=event.id)) %}
        {{ forms.textarea_field(form.reason, placeholder='Why do you want to enroll to this event?') }}
        {{ forms.button_field('Enroll', glyphicon='ok') }}
    {% endcall %}
</div>
{% endblock %}
